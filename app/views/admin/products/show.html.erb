<% provide(:title, "商品詳細") %>
<div class='col-md-9 offset-md-2'>
  <h2>商品詳細</h2>
  <div class='row'>
    <div class='col-md-1'>
      <%= attachment_image_tag @product, :image, fallback: "no_image.jpg", size: "300x250" %>
    </div>
    <div class='col-md-5 offset-md-5'>
      <table class="table table-borderless">
        <tr>
          <th>商品名</th>
          <th><%= @product.name %></th>
        </tr>
        <tr>
          <th>商品説明</th>
          <th><%= @product.detail %></th>
        </tr>
        <tr>
          <th>ジャンル</th>
          <th><%= @product.genre.name %></th>
        </tr>
          <tr>
          <th>税込価格<br>(税抜価格)</th>
          <th>
          <%= @tax_included_price %>(<%= @product.price %>)円
          </th>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <th><%= @product.sales_status %></th>
        </tr>
      </table>
      </div>
    </div>
  <%= link_to "編集する", edit_admin_product_path(@product), class: "btn btn-success btn-lg" %>
</div>
