<% provide(:title, "商品一覧") %>
<div class='container'>
 <div class='col-md-10 offset-md-1'>
  <div class="row justify-content-between">
   <div class="col-4"><h4>商品一覧</4></div>
    <%= link_to new_admin_product_path do %>
   <div class="col-1"><i class="fa fa-plus-circle fa-2x" style="color: #cccccc;"></i></div>
    <% end %>
  </div>
   <table class='table'>
    <thead>
     <tr>
       <th>商品ID</th>
       <th>商品名</th>
       <th>税抜価格</th>
       <th>ジャンル</th>
       <th>ステータス</th>
     </tr>
    </thead>
    <tbody>
    <% @products.each do |product| %>
     <tr>
      <td><%= product.id %></td>
      <td>
       <%= link_to admin_product_path(product.id) do %>
        <%= product.name %>
       <% end %>
      </td>
      <td>
       <%= product.price %>
      </td>
      <td>
       <%= product.genre.name %>
      </td>
      <td>
       <%= product.sales_status %>
      </td>
     </tr>
    <% end %>
   </tbody>
  </table>
 </div>
</div>
