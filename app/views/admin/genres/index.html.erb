<div class="container">
  <div class="row">

    <div class="col-md-8 offset-md-1">
      <h2>Genres</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
           <th></th>
           <th>name</th>
           <th></th>
          </tr>
       </thead>
     <% @genres.each do |genre| %>
       <tbody>
       <tr>
         <td></td>
         <td>
           <%= genre.name %>
         </td>
         <td><%= link_to edit_admin_genre_path(genre),class: "col-sm-12 btn btn-outline-secondary btn-block" do  %>
             <span class="fas fa-user-cog">編集</span>
             <% end %>
         </td>
       </tr>
       </tbody>
       <% end %>
      </table>
    </div>

    <div class="col-md-3">
      <h2 class="mt-3">Create Genre</h2>

        <%= form_with model: @genre, url:  admin_genres_path, local:true do |f| %>
          <div class="form-group">
            <label for="name">Name</label>
              <%= f.text_field :name, placeholder:"ジャンル名を入力" %>
          </div>
          <div class="form-group">
              <%= f.submit %>
          </div>
      <% end %>
    </div>
  </div>
</div>