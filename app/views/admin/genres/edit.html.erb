<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2 class="mt-3">Create Genre</h2>
        <%= form_with model: @genre, url: admin_genre_path, local:true do |f| %>
          <div class="form-group">
            <label for="name">Name</label>
              <%= f.text_field :name, placeholder:"#{@genre.name}" %>
          </div>
          <div class="form-group">
              <%= f.submit "Update Genre" %>
          </div>
      <% end %>
    </div>
  </div>
</div>