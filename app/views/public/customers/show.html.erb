<div class="container">
  <div class="row ">
    <div class="col-md-6 my-3" style="text-align:center;">
      <h2>マイページ</h2>
    </div>

    <div class="col-md-6 mt-5" style="text-align:center;">
     <strong>登録情報</strong>を <%= link_to "編集する", edit_public_customer_path(@customer), class:"btn btn-success  btn-sm mypage_edit" %>
    </div>

  </div>

  <div class="row" style="padding-top:10px;">
    <div class="col-md-12" style="text-align:center;">
      <table class="table table-bordered my-3" align="center">
        <tr>
          <td>氏名</td>
          <td><%= @customer.last_name %><%= @customer.first_name %></td>
        </tr>

        <tr>
          <td>カナ</td>
          <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
        </tr>

        <tr>
          <td>郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </tr>

        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>

        <tr>
          <td>電話番号</td>
          <td><%= @customer.phone_number %></td>
        </tr>

        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row justify-content-around my-5">
    <div class="col-md-3" style="text-align:center;">
    <%= link_to "配送先の一覧",  public_shipping_addresses_path, class:"btn btn-primary" %>
    </div>
    <div class="col-md-3" style="text-align:center;">
    <%= link_to "注文履歴の一覧", public_orders_path, class:"btn btn-primary" %>
    </div>
  </div>

</div>